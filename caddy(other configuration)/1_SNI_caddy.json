//修改常规配置相关参数如下：（示例仅配置了两个域名的SNI分流；如需要多个域名，增加对应参数即可。）
//.........<省略>........
  "apps": {
    "layer4": { //加了caddy-l4插件编译的才可启用SNI分流
      "servers": {
        "sni": {
          "listen": [":443"],
          "routes": [{
            "match": [{
              "tls": {
                "sni": ["zv.xx.yy"] //修改成自己分流的域名
              }
            }],
            "handle": [{
              "handler": "proxy",
              "proxy_protocol": "v2", //v1或v2表示PROXY protocol版本，启用PROXY protocol发送；""中为空或无（删除）此条参数，表示不启用PROXY protocol发送。
              "upstreams": [{
                "dial": ["127.0.0.1:8443"] //与应用的端口对应
              }]
            }]
          },
          {
            "match": [{
              "tls": {
                "sni": ["zt.xx.yy"] //修改成自己分流的域名
              }
            }],
            "handle": [{
              "handler": "proxy",
              "proxy_protocol": "v2", //v1或v2表示PROXY protocol版本，启用PROXY protocol发送；""中为空或无（删除）此条参数，表示不启用PROXY protocol发送。
              "upstreams": [{
                "dial": ["127.0.0.1:2083"] //与应用的端口对应
              }]
            }]
          }]
        }
      }
    },
    "http": {
//.........<省略>........
    }
  }
}
