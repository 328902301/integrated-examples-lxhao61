{
  "admin": {
    "disabled": true
  },
  "logging": {
    "logs": {
      "default": {
        "level": "ERROR",
        "writer": {
          "output": "file",
          "filename": "/var/log/caddy/access.log"
        }
      }
    }
  },
  "apps": {
    "http": {
      "servers": {
        "https": {
          "listen": [":443"],
          "routes": [{
            "handle": [{
              "handler": "forward_proxy",
              "auth_user": "user", //naiveproxy账号，修改为自己的。
              "auth_pass": "pass", //naiveproxy密码，修改为自己的。
              "hide_ip": true,
              "hide_via": true,
              "probe_resistance": {
                "domain": "unsplash.com:443"
              }
            }]
          },
          {
            "match": [{
              "path": ["/HALdGZ9k"], //与vless+ws应用中path对应
              "header": {
                "Connection": ["*Upgrade*"],
                "Upgrade": ["websocket"]
              }
            }],
            "handle": [{
              "handler": "reverse_proxy",
              "transport": {
                "protocol": "http"
              },
              "upstreams": [{
                "dial": "unix//dev/shm/vws.sock" //转发给本机vless+ws监听进程
              }]
            }],
            "terminal": true
          },
          {
            "match": [{
              "path": ["/ss1v2ray"], //与Xray-plugin或v2ray-plugin模块中path对应
              "header": {
                "Connection": ["*Upgrade*"],
                "Upgrade": ["websocket"]
              }
            }],
            "handle": [{
              "handler": "reverse_proxy",
              "transport": {
                "protocol": "http"
              },
              "upstreams": [{
                "dial": "127.0.0.1:2002" //转发给本机Xray-plugin或v2ray-plugin模块监听端口
              }]
            }],
            "terminal": true
          },
          {
            "match": [{
              "path": ["/SeuW56Es"] //与vless+h2c应用中path对应
            }],
            "handle": [{
              "handler": "reverse_proxy",
              "transport": {
                "protocol": "http",
                "versions": ["h2c"]
              },
              "upstreams": [{
                "dial": "127.0.0.1:2005" //转发给本机vless+h2c监听端口
              }]
            }],
            "terminal": true
          },
          {
            "match": [{
              "protocol": "grpc" //与vless+grpc应用中network对应
            }],
            "handle": [{
              "handler": "reverse_proxy",
              "transport": {
                "protocol": "http",
                "versions": ["h2c"]
              },
              "upstreams": [{
                "dial": "127.0.0.1:2009" //转发给本机vless+grpc监听端口
              }]
            }],
            "terminal": true
          },
          {
            "handle": [{
              "handler": "headers",
              "response": {
                "set": {
                  "Strict-Transport-Security": ["max-age=31536000; includeSubDomains; preload"] //启用HSTS
                }
              }
            },
            {
              "handler": "file_server",
              "root": "/var/www/html" //修改成自己存放的web文件路径
            }],
            "terminal": true
          }],
          "tls_connection_policies": [{
            "match": {
              "sni": ["xx.yy"] //修改成自己的域名
            },
            "cipher_suites": ["TLS_ECDHE_ECDSA_WITH_AES_256_GCM_SHA384","TLS_ECDHE_ECDSA_WITH_AES_128_GCM_SHA256","TLS_ECDHE_ECDSA_WITH_CHACHA20_POLY1305_SHA256"],
            "alpn": ["h2","http/1.1"]
          }]
        }
      }
    },
    "tls": {
      "certificates": {
        "automate": ["xx.yy"] //修改成自己的域名
      }
    }
  }
}
